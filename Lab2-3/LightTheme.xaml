<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="basedTheme">
        <Setter Property="Control.Background" Value="#cccccc"/>
        <Setter Property="Control.FontSize"  Value="13"/>

    </Style>


    <Style x:Key="ToolBarTheme" BasedOn="{StaticResource basedTheme}">


    </Style>

    <Style x:Key="RadioTheme" BasedOn="{StaticResource basedTheme}">
        <Setter Property="RadioButton.Foreground"  Value="Black"/>

    </Style>

    <Style x:Key="ToolBarTrayTheme" BasedOn="{StaticResource basedTheme}">


    </Style>

    <Style x:Key="MenuTheme" BasedOn="{StaticResource basedTheme}">

        <Setter Property="Menu.Foreground"  Value="Black"/>
    </Style>

    <Style x:Key="TextBoxTheme" BasedOn="{StaticResource basedTheme}">

        <Setter Property="TextBlock.FontSize"  Value="20" ></Setter>
        <Setter Property="TextBlock.TextWrapping"  Value="Wrap"></Setter>
        <Setter Property="TextBlock.FontFamily"  Value="Arial"></Setter>
        <Setter Property="TextBlock.Foreground"  Value="Black"/>
    </Style>
</ResourceDictionary>